<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:background="@drawable/list_selector"
    >

  <ImageView
      android:layout_width="36dp"
      android:layout_height="36dp"
      android:layout_margin="@dimen/gapMedium"
      android:id="@android:id/icon"
      android:padding="@dimen/gapMedium"
      />

  <TextView
      android:id="@android:id/text1"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:textColor="@android:color/black"
      android:gravity="center_vertical"
      android:paddingLeft="@dimen/gapMedium"
      android:paddingStart="@dimen/gapMedium"
      android:paddingRight="@dimen/gapMedium"
      android:paddingEnd="@dimen/gapMedium"
      android:textSize="@dimen/textSizeMedium"
      android:fontFamily="sans-serif-light"
      />
</LinearLayout>
